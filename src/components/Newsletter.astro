<section id="newsletter" class="mt-8 mb-8 p-0">
  <p>Sign up to get updates on my latest posts, projects and insights on AI & ML. You'll only receive an email when I publish something new. ðŸ‘‡</p>
  <div class="mt-4">
    <script src="https://f.convertkit.com/ckjs/ck.5.js" is:inline></script>
    <form
      id="newsletter-form"
      action="https://app.kit.com/forms/8036304/subscriptions"
      class="seva-form formkit-form"
      method="post"
      data-sv-form="8036304"
      data-uid="2d16cff56e"
      data-format="inline"
      data-version="5"
      style="max-width: 700px; border-radius: 4px;">
      <div style="padding: 0;">
        <ul class="formkit-alert formkit-alert-error" data-element="errors" data-group="alert"></ul>
        <div id="newsletter-form-fields" data-element="fields" data-stacked="false" class="flex items-center gap-2 mt-1">
          <div class="formkit-field flex-grow">
            <input 
              class="formkit-input w-full px-4 py-2 border border-gray-300 rounded-md" 
              name="email_address" 
              aria-label="Email Address" 
              placeholder="Email Address" 
              required 
              type="email" 
            />
          </div>
          <button 
            data-element="submit" 
            class="formkit-submit text-white font-medium py-2 px-4 rounded-md transition-colors subscribe-btn">
            <span>Subscribe</span>
          </button>
        </div>
        <div id="success-message" class="hidden mt-4 p-3 bg-green-50 text-green-800 dark:bg-green-900/30 dark:text-green-300 rounded-md border border-green-200 dark:border-green-800">
          <p class="text-center">Thanks for subscribing! <strong>Please check your email to confirm your subscription.</strong></p>
        </div>
      </div>
    </form>
  </div>
</section>

<style>
  .subscribe-btn {
    background-color: #006CAC;
  }
  .subscribe-btn:hover {
    background-color: #005a8e;
  }
  
  /* Input styles */
  .formkit-input {
    background-color: #ffffff;
    color: #000000;
  }
  
  /* Dark mode styles */
  html[data-theme="dark"] .subscribe-btn {
    background-color: #149231;
  }
  html[data-theme="dark"] .subscribe-btn:hover {
    background-color: #0d6b22;
  }
  
  /* Dark mode input styles */
  html[data-theme="dark"] .formkit-input {
    background-color: #2A3550;
    border-color: #3E4A6B;
    color: #E4EDF3;
  }
  
  html[data-theme="dark"] .formkit-input::placeholder {
    color: #8996B5;
  }
</style>

<script is:inline>
  // Wait for DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', function() {
    // Find all newsletter forms on the page
    const forms = document.querySelectorAll('#newsletter-form');
    
    forms.forEach(form => {
      // Handle form submissions
      form.addEventListener('submit', function() {
        // Get the form fields and success message elements
        const formFields = form.querySelector('#newsletter-form-fields');
        const successMessage = form.querySelector('#success-message');
        
        // ConvertKit form submission handler
        setTimeout(function() {
          // Check if the form was successfully submitted (no visible error message)
          const errorEl = form.querySelector('.formkit-alert-error');
          if (errorEl && errorEl.children.length === 0) {
            // Hide the form fields and show the success message
            if (formFields && successMessage) {
              formFields.style.display = 'none';
              successMessage.classList.remove('hidden');
            }
          }
        }, 1000); // Short delay to allow form processing
      });
    });
  });
</script>
